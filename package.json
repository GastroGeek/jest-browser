{
  "name": "jest-browser",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "watch": {
    "jest": "*.test.js"
  },
  "scripts": {
    "test": "run-p reload watch",
    "watch": "npm-watch jest",
    "jest": "jest --onlyChanged --silent --noStackTrace --passWithNoTests --forceExit --detectOpenHandles --config jest.config.json *.test.js",
    "reload": "reload --exts html -s test-report.html"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "jest": "^24.8.0",
    "jest-html-reporter": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "reload": "^3.0.1"
  }
}
